<div class="logo-big">
  <div class="login-container">


  <div  class="form-container">
    <p class="login-hello">Welcome to Bison Bookshelf!</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>

            <div class="remember"
          <%= f.check_box :remember_me %>
          <%= f.label     :remember_me, class: "control-label" %>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class: 'btn' %>
                <% end %>
            </div>
          <h2 class="log"> <%= render "devise/shared/links" %></h2>
            <p  class="notice"><%= notice %></p>
    <p  class="alert"><%= alert %></p>
          </div>
</div>





  </div>
