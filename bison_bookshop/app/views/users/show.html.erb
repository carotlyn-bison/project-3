<div>
  <h1>Hi, <%= @user.email %>!</h1>
</div>
<div>
  <% if current_user == @user %>
      <h1>Bookself:</h1>
      <% @books.each do |book| %>
        <div>
          <h1><%= book.title %></h1>
          <p>By: <%= book.author %></p>
          <div><img src="<%= book.image %>" /></div>
          <p><%= book.description %></p>
          <p><%= link_to book.buy_link %></p>
        </div>
      <% end %>
  <% end %>
</div>
