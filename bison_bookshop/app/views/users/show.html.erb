  <div class="music-div">
    <button class="mute">&#128263;</button>
    <button class="sound-on">&#128266;</button>
  </div>
<div class = "bookshelf">
         <div class ="welcome">
          <h1 class="user">Hi, <%= @user.email %>!</h1>


      </div>

<div class ="shelf">

  <% if current_user == @user %>

<div class = "show-books">
      <% @books.each do |book| %>
      <% if book.read == false %>
       <div class ="to-read">
         <%= link_to (image_tag(book.image)), book_path(book.id) %>
      </div>
<% else %>
     <div class ="have-read">


       <%= link_to (image_tag(book.image)), book_path(book.id) %>

    </div>
     <% end %>
      <% end %>
  <% end %>
</div>
